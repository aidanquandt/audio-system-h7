{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure Both Cores",
            "type": "shell",
            "command": "./tools/configure.sh",
            "problemMatcher": []
        },
        {
            "label": "Build Both Cores",
            "type": "shell",
            "command": "./tools/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build CM4 Only",
            "type": "shell",
            "command": "cmake --build build/CM4 -j8",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build CM7 Only",
            "type": "shell",
            "command": "cmake --build build/CM7 -j8",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "./tools/clean.sh",
            "problemMatcher": []
        },
        {
            "label": "Full Rebuild",
            "type": "shell",
            "command": "./tools/rebuild.sh",
            "problemMatcher": ["$gcc"]
        }
    ]
}
